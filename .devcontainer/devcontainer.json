{
  "name": "aura-enterprise (uv)",
  "dockerComposeFile": ["../docker-compose.devcontainer.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/enterprise-aura",
  "postCreateCommand": "uv sync",
  "updateContentCommand": "uv sync",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/enterprise-aura/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["-q"],
        "editor.codeActionsOnSave": { "source.organizeImports": "explicit" }
      }
    }
  },
  "forwardPorts": [27017, 5015]
}
