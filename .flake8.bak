[flake8]
max-line-length = 100
extend-ignore = E203
exclude = .git,.venv,.ruff_cache,.pytest_cache,aura_v2.egg-info,tmp
per-file-ignores =
    aura_v2/diagnostic_dashboard.py:E501
    aura_v2/setup_dashboard.py:E501
    aura_v2/main.py:E501
    scripts/check_init_imports.py:E501
    tests/fusion/test_end_to_end_fuse.py:E501
    aura_v2/domain/__init__.py:F403
    aura_v2/infrastructure/adapters/legacy/bridge.py:E402,F841
    aura_v2/test_dashboard_setup.py:F401
